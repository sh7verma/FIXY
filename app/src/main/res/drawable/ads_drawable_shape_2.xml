<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <item android:id="@+id/shape">
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
            <size android:width="72dp" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>

    </item>
    <item
        android:id="@+id/corner"
        android:bottom="@dimen/_100sdp"
        android:left="-90dp"
        android:right="@dimen/_70sdp"
        android:top="-90dp">
        <shape android:shape="rectangle">

            <corners
                android:topRightRadius="@dimen/_150sdp"
                android:bottomLeftRadius="@dimen/_140sdp"
                android:bottomRightRadius="@dimen/_75sdp" />
            <solid android:color="@color/plumber" />
        </shape>

    </item>
</layer-list>